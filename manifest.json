{
    "manifest_version": 3,
    "name": "AdBlocker",
    "description": "Coursework on the subject 'Programming Technologies'.",
    "version": "1.0",
    "author": "Slava Sovan",
    "background": {
        "service_worker": "scripts/background.js"
    },
    "icons": {
        "16": "icons/icn_16.png",
        "32": "icons/icn_32.png",
        "48": "icons/icn_48.png",
        "128": "icons/icn_128.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "exclude_matches": [
                "*://*.google.com/*",
                "*://*.yandex.ru/*",
                "*://*.bing.com/*"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "webNavigation"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "resources/filters.json"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}