{
    "manifest_version": 3,
    "name": "Adsblocker",
    "description": "Coursework on the subject 'Programming Technologies'.",
    "version": "1.0",
    "author": "Slava Sovan",
    "permissions": [],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "exclude_matches": [
                "*://www.google.com/*",
                "*://www.yandex.ru/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "content.js"
    }
}